<Button x:Class="DataDownloader.Ui.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding IconSource}" Style="{DynamicResource Icon}"/>
        <TextBlock Text="{Binding Text}" VerticalAlignment="Center" />
    </StackPanel>
</Button>
